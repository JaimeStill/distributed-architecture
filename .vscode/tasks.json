{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-app",
            "command": "dotnet",
            "type": "process",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/"
            },
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ]
        },
        {
            "label": "seed-app-database",
            "command": "dotnet",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/dbseeder/"
            },
            "args": [
                "run",
                "--",
                "\"Server=.\\DevSql;Database=distributed-app-dev;Trusted_Connection=True;\""
            ]
        },
        {
            "label": "test-picsum",
            "command": "dotnet",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/proto/picsum-api/"
            },
            "args": [
                "run"
            ]
        },
        {
            "label": "update-app-database",
            "command": "dotnet",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/App.Data/"
            },
            "args": [
                "ef",
                "database",
                "update",
                "-s",
                "../App.Web"
            ]
        },
        {
            "label": "watch-server",
            "command": "dotnet",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/App.Web/"
            },
            "args": [
                "watch",
                "run"
            ],
            "presentation": {
                "panel": "dedicated"
            }
        }
    ]
}